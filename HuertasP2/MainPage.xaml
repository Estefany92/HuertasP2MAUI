<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HuertasP2.MainPage">

    <StackLayout>
        <VerticalStackLayout
            Padding="20,0"
            Spacing="20">

            <Label
                Text="Bienvenido a la applicacion de Estefani Huertas"
                FontSize="24"
                Style="{StaticResource Headline}"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level1" />
            
            <Image
                Source="emoji.jpg"
                HeightRequest="185"
                Aspect="AspectFit" />



            <Button
                x:Name="Chistebtn"
                Text="Chiste" 
                Clicked="OnChisteClicked" />
            
            <Button
                x:Name="Aboutbtn"
                Text="About" 
                Clicked="OnAboutClicked" />

            
        </VerticalStackLayout>
    </StackLayout>

</ContentPage>
